{
	"name": "dataflow_adls_2_blob",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS1_ADLS",
						"type": "DatasetReference"
					},
					"name": "sourceadls",
					"description": "Import data from emp4 in DS1_ADLS"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "dsblob_csv",
						"type": "DatasetReference"
					},
					"name": "sinkblob"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string,",
				"          Column_4 as string,",
				"          Column_5 as string,",
				"          Column_6 as string,",
				"          Column_7 as string,",
				"          Column_8 as string,",
				"          Column_9 as string,",
				"          Column_10 as string,",
				"          Column_11 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceadls",
				"sourceadls derive(Column_1 = concat('EMP', Column_1),",
				"          Column_4 = concat(Column_4, '@email.com')) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkblob"
			]
		}
	}
}